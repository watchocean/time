/* pages/posts/post-detail/post-detail.wxss */
.container{
    display: flex;
    flex-direction: column;
}

.head-image{
    width: 100%;
    height: 460rpx;
}
.audio{
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    width: 102rpx;
    height: 110rpx;
    opacity: 0.6; 
}
.author-date{
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}
.avatar{
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}
.author{
    margin-left: 20rpx;
    vertical-align: middle;
    font-size: 30rpx;
    color: #666;
}
.const-text{
    margin-left: 20rpx;
    font-size: 20rpx;
    color: #999;
}
.date{
    margin-left: 30rpx;
    vertical-align: middle;
    font-size: 24rpx;
    color: #999;
}
.title{
    margin-left: 40rpx;
    margin-top: 30rpx;
    letter-spacing: 2px;
    font-size: 36rpx;
    font-weight: 700;
    color: #4b556c;
}

.tool{
    margin-top: 20rpx;
}

.circle-img{
    float: right;
    margin-right: 40rpx;
    vertical-align: middle;
}

.circle-img image{
    width: 90rpx;
    height: 90rpx;
}

.share-img{
    margin-left: 30rpx;
}

.horizon{
    width:660rpx;
    height: 2rpx;
    background-color: #e5e5e5;
    vertical-align: middle;
    position:relative;
    margin: 0 auto;
    z-index: -99;
    top: 46rpx;
}
.detail{
    margin: 20rpx 30rpx 0 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
    color: #666;
}